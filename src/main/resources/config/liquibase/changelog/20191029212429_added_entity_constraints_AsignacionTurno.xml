        <addForeignKeyConstraint baseColumnNames="cargo_id"
                                 baseTableName="asignacion_turno"
                                 constraintName="fk_asignacion_turno_cargo_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cargo"/>

    </changeSet>
</databaseChangeLog>
